    "version": "0.2.0",
    "configurations": [
        {
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "bmp",
            "cwd": "${workspaceRoot}",
            "executable": "./target/thumbv7em-none-eabi/debug/lpc43blinky",
            "name": "Debug (Black Magic Probe)",
            "device": "LPC43UXX",
            // for MacOS: change to your specific black magic probe, see `bobbin info`
            "BMPGDBSerialPort": "/dev/cu.usbmodemC1CC90EE1",
            "targetId": 1,
            "showDevDebugOutput": false,
        }
    ]
}